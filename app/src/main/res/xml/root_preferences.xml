<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="a">

        <EditTextPreference
            app:key="signature"
            app:title="a"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="a"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="a">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="a" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="a"
            app:summaryOn="a"
            app:title="a" />

    </PreferenceCategory>

</PreferenceScreen>